{% endblock %}

{% block header %}

{% endblock %}

{# Contenido #}

{% block content %}
<div class="conatiner">
    <h1 class="mt-4 mb-3">Categories
        <small>Seguros</small>
    </h1>
</div>
        <section class="py-5 border-bottom" id="features">
            <div class="container px-5 my-5">
                <div class="row gx-5">
                {% for category in categories %}

                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <h2 class="h4 fw-bolder">{{category.name}}</h2>
                        <p> Esto es una categoria</p>
                        <img class="img-fluid rounded mb-4" src="{{ asset('img/car.png')}}">
                        <a class="text-decoration-none" href={{ path("product") }}>
                            <h3>Seguros<h3>
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>{% endblock %}