{# Plantilla de la app#}
{% extends 'base.html.twig' %}
{# Titulo #}
{% block title %}
New Product
{% endblock %}

{# Contenido #}

{% block content %}
<div class="container">
    <h1 class="mt-4 mb-3">New Product</h1>
    <div class="row">
        <div class="col-md-8">
            {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="control-group form-group">
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="control-group form-group">
                    {{ form_label(form.category) }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category) }}
                </div>

                <div>
                {{ form_widget(form.save) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}